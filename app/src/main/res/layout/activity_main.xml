<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/login_success"
            android:gravity="center"
            android:id="@+id/main_info"
            android:layout_width="100dp"
            android:layout_height="50dp" />
        <Button
            android:layout_below="@id/main_info"
            android:text="@string/logout"
            android:id="@+id/logout"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/logout"
            android:id="@+id/update_data"
            android:text="@string/update_data"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/update_data"
            android:id="@+id/change_email"
            android:text="@string/change_email"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/change_email"
            android:id="@+id/verification_email"
            android:text="驗證Email"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <Button
            android:layout_below="@id/verification_email"
            android:id="@+id/get_profile"
            android:text="@string/get_profile"
            android:layout_width="100dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@id/get_profile"
            android:id="@+id/profile_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</ScrollView>